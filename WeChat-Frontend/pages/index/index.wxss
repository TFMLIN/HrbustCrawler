.flex-center {
    display: flex;
    justify-content: center;
}

.flex-col-center {
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.toptop .title {
    margin-right: 10rpx;
}

.toptop .picker .name {
    /* border: 1rpx solid #fff; */
    padding: 3rpx 30rpx 3rpx 10rpx;
    position: relative;
    border-radius: 8px;
}

.toptop .picker .name::after {
    content: '';
    position: absolute;
    top: calc(50% + 10rpx);
    right: 5rpx;
    transform: translateY(-50%);
    width: 0;
    height: 0;
    border: 10rpx solid transparent;
    border-top-color: #fff;
}